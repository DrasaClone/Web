<?xml version='1.0' encoding='utf-8'?>
<widget id="com.yourcompany.drasaclone"
        version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

  <name>DrasaClone</name>
  <description>Bọc site drasaclone.github.io/Web vào app Android</description>
  <author email="you@example.com"
          href="https://drasaclone.github.io">You</author>

  <!-- Load trực tiếp site chính -->
  <content src="https://drasaclone.github.io/Web/" />

  <!-- Cho phép tất cả URL -->
  <access origin="*" />

  <!-- Chặn mở link ra ngoài trình duyệt -->
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />

  <!-- Tăng timeout, giữ splash -->
  <preference name="LoadUrlTimeoutValue" value="700000" />
  <preference name="AutoHideSplashScreen" value="false" />

  <!-- Các plugin sẽ tự động cài (không cần chạy cordova plugin add) -->
  <plugin name="cordova-plugin-inappbrowser" spec="^5.0.0" />
  <plugin name="cordova-plugin-background-mode" spec="^0.7.3" />
</widget>
